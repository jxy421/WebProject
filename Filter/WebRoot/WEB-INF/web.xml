<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" 
	xmlns="http://java.sun.com/xml/ns/javaee" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
  <servlet>
    <servlet-name>CommentServlet</servlet-name>
    <servlet-class>web.CommentServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CommentServlet</servlet-name>
    <url-pattern>/comment</url-pattern>
  </servlet-mapping>	
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  <filter>
  	<filter-name>CommentFilter</filter-name>
  	<filter-class>web.CommentFilter</filter-class>
  	<init-param>
  		<param-name>word</param-name>
  		<param-value>共党</param-value>
	</init-param>
  </filter>
  <filter>
  	<filter-name>Comment2Filter</filter-name>
  	<filter-class>web.Comment2Filter</filter-class>
  	<init-param>
  		<param-name>length</param-name>
  		<param-value>20</param-value>
  	</init-param>
  </filter>
  <filter-mapping>
  	<filter-name>CommentFilter</filter-name>
  	<!-- 需要拦截的路径地址URL -->
  	<url-pattern>/comment</url-pattern>
  </filter-mapping>
  <filter-mapping>
  	<filter-name>Comment2Filter</filter-name>
  	<url-pattern>/comment</url-pattern>
  </filter-mapping>
</web-app>
